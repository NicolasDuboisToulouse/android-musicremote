<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="bottom_icons_bar">
         <item name="android:background">#000000</item>
    </style>
    
    <!-- Headers -->
    <style name="header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    
    <!-- main text on an list item -->
    <style name="list_item_main_text">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    
    <!-- sub text on an list item -->
    <style name="list_item_sub_text" parent="list_item_main_text">
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!--  playlist icon -->
    <style name="list_item_playlist_icon">
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <!-- Vertical separator -->
    <style name="vertical_separator">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">#FF000000</item>
    </style>
       
    
</resources>